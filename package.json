{
  "name": "nopo",
  "version": "0.0.1",
  "private": true,
  "description": "mo(no) re(po) tools for mono repos",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:workspace": "pnpm run -r build",
    "clean:workspace": "pnpm run -r clean",
    "clean:root": "rm -rf .cache .config .bash_history .env .local .pnpm-store .venv/* node_modules && rm -f build-metadata.json || true",
    "check:workspace": "pnpm run -r \"/^check:.*/\"",
    "check:lint:root": "eslint",
    "check:types:root": "tsc --noEmit",
    "check:knip:root": "knip",
    "check:gwf:root": "pnpm run gwf:build && git diff --exit-code .github/workflows/",
    "gwf:build": "gwf build",
    "fix:workspace": "pnpm run -r \"/^fix:.*/\"",
    "fix:lint:root": "eslint --fix",
    "fix:knip:root": "knip --fix",
    "dev:workspace": "pnpm -r dev",
    "start:workspace": "pnpm run -r start",
    "test:workspace": "pnpm run -r test",
    "publish:workspace": "pnpm publish -r",
    "smoketest": "playwright test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.1",
    "husky": "^9.1.7",
    "@github-actions-workflow-ts/actions": "^2.1.0",
    "@github-actions-workflow-ts/cli": "^2.1.0",
    "@github-actions-workflow-ts/lib": "^2.1.0",
    "@eslint/compat": "^1.2.8",
    "@eslint/js": "^9.23.0",
    "@playwright/test": "^1.57.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^20.17.30",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "glob": "^11.0.0",
    "globals": "^16.0.0",
    "knip": "^5.63.1",
    "prettier": "3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.0",
    "vitest": "^3.1.1",
    "zod": "^3.24.2"
  },
  "packageManager": "pnpm@10.11.1",
  "engines": {
    "node": ">=22.16"
  }
}
