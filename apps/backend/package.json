{
  "name": "@more/backend",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "files": [
    "build/**"
  ],
  "scripts": {
    "build": "vite build && uv run python manage.py collectstatic --noinput",
    "clean": "rm -rf build node_modules",
    "fix:lint": "uv tool run ruff format",
    "fix:lint:js": "eslint --fix",
    "check:lint": "uv tool run ruff check",
    "check:lint:js": "eslint",
    "check:lint:py": "uv tool run ruff check",
    "check:types:py": "uv run mypy .",
    "check:types:js": "tsc --noEmit",
    "test": "pnpm python manage.py test src",
    "dev": "pnpm python manage.py runserver 0.0.0.0:80 --settings=settings",
    "vite": "vite",
    "python": "uv run python",
    "start": "uv run gunicorn --config gunicorn.conf.py src.mysite.wsgi:application",
    "migrate": "pnpm python manage.py migrate",
    "makemigrations": "pnpm python manage.py makemigrations",
    "shell": "pnpm python manage.py shell"
  },
  "devDependencies": {
    "@more/configs": "workspace:*",
    "@more/ui": "workspace:*",
    "@tailwindcss/vite": "^4.1.4",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vitest": "^3.1.1"
  }
}
