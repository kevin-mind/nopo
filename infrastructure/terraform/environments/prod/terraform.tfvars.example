# Terraform variables for PRODUCTION environment
# ================================================
# Copy this file to terraform.tfvars and replace all {PLACEHOLDER} values
# ================================================

# REQUIRED: Replace these placeholders with your actual values
project_id       = "{YOUR_PROJECT_ID}"      # e.g., "mycompany-nopo"
region           = "us-central1"
domain           = "{YOUR_DOMAIN}"          # e.g., "myapp.com"
subdomain_prefix = ""                       # Empty = apex domain ({YOUR_DOMAIN})

# REQUIRED: Docker images (set by CI/CD, or use placeholders for initial setup)
# Format: {REGION}-docker.pkg.dev/{PROJECT_ID}/nopo/{SERVICE}:{VERSION}
backend_image = "{YOUR_REGION}-docker.pkg.dev/{YOUR_PROJECT_ID}/nopo/backend:{VERSION}"
web_image     = "{YOUR_REGION}-docker.pkg.dev/{YOUR_PROJECT_ID}/nopo/web:{VERSION}"

# For initial Terraform setup before CI/CD, use Google's hello container:
# backend_image = "gcr.io/cloudrun/hello"
# web_image     = "gcr.io/cloudrun/hello"
