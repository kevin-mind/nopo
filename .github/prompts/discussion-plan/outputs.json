{
  "type": "object",
  "properties": {
    "issues": {
      "type": "array",
      "description": "Issues to create from the discussion",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Issue title"
          },
          "body": {
            "type": "string",
            "description": "Issue body with context and tasks"
          },
          "labels": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Labels to apply (type, topic, etc.)"
          }
        },
        "required": ["title", "body"]
      }
    },
    "updated_body": {
      "type": "string",
      "description": "Updated discussion description with implementation plan"
    },
    "summary_comment": {
      "type": "string",
      "description": "Comment to post listing created issues"
    },
    "agent_notes": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Important context for future agents"
    }
  },
  "required": ["issues", "updated_body", "summary_comment"]
}
