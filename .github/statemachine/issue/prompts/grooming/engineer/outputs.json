{
  "type": "object",
  "properties": {
    "implementation_plan": {
      "type": "string",
      "description": "High-level approach to solving this issue"
    },
    "affected_areas": {
      "type": "array",
      "description": "Files, modules, or systems that need changes",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string", "description": "File or module path" },
          "change_type": {
            "type": "string",
            "enum": ["modify", "create", "delete"],
            "description": "Type of change needed"
          },
          "description": { "type": "string", "description": "What changes are needed" }
        },
        "required": ["path", "change_type", "description"]
      }
    },
    "technical_risks": {
      "type": "array",
      "description": "Complexity, performance, or breaking change concerns",
      "items": {
        "type": "object",
        "properties": {
          "risk": { "type": "string", "description": "Description of the risk" },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "How severe is this risk?"
          },
          "mitigation": { "type": "string", "description": "How to mitigate this risk" }
        },
        "required": ["risk", "severity"]
      }
    },
    "scope_recommendation": {
      "type": "string",
      "enum": ["keep", "split", "expand"],
      "description": "Recommendation for issue scope"
    },
    "scope_rationale": {
      "type": "string",
      "description": "Explanation for scope recommendation"
    },
    "recommended_phases": {
      "type": "array",
      "description": "Recommended phase breakdown for implementation. Empty array if issue is simple enough for single phase.",
      "items": {
        "type": "object",
        "properties": {
          "phase_number": { "type": "integer", "description": "Phase number (1-indexed)" },
          "title": { "type": "string", "description": "Short phase title" },
          "description": { "type": "string", "description": "What this phase accomplishes" },
          "affected_areas": {
            "type": "array",
            "description": "Files affected in this phase",
            "items": {
              "type": "object",
              "properties": {
                "path": { "type": "string", "description": "File path" },
                "change_type": {
                  "type": "string",
                  "enum": ["create", "modify", "delete"],
                  "description": "Type of change"
                },
                "description": { "type": "string", "description": "What changes in this file" }
              },
              "required": ["path", "change_type", "description"]
            }
          },
          "todos": {
            "type": "array",
            "description": "Specific tasks for this phase",
            "items": {
              "type": "object",
              "properties": {
                "task": { "type": "string", "description": "The task description" },
                "manual": { "type": "boolean", "description": "True if requires human action" }
              },
              "required": ["task", "manual"]
            }
          },
          "depends_on": {
            "type": "array",
            "description": "Phase numbers this depends on",
            "items": { "type": "integer" }
          }
        },
        "required": ["phase_number", "title", "description", "todos"]
      }
    },
    "ready": {
      "type": "boolean",
      "description": "Is this issue ready for implementation?"
    },
    "blockers": {
      "type": "array",
      "description": "What's blocking this issue if not ready",
      "items": { "type": "string" }
    },
    "questions": {
      "type": "array",
      "description": "Technical questions that need answers",
      "items": { "type": "string" }
    }
  },
  "required": ["implementation_plan", "affected_areas", "scope_recommendation", "ready"]
}
