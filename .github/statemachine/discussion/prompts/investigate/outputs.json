{
  "type": "object",
  "properties": {
    "findings": {
      "type": "string",
      "description": "Comprehensive markdown write-up of investigation findings"
    },
    "key_points": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Most important discoveries (3-7 items)",
      "minItems": 3,
      "maxItems": 7
    },
    "recommendations": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Actionable recommendations based on findings"
    },
    "open_questions": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Questions that remain unanswered or need further investigation"
    },
    "agent_notes": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Important context for future agents"
    }
  },
  "required": ["findings", "key_points"]
}
